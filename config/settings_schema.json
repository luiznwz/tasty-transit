  {
    "name": "t:settings_schema.whatsapp-button.name",
    "settings": [
      {
        "type": "header",
        "content": "t:settings_schema.whatsapp-button.settings.header.content"
      },
      {
        "type": "checkbox",
        "id": "whatsapp_button",
        "label": "t:settings_schema.whatsapp-button.settings.whatsapp_button.label",
        "default": true
      },
      {
        "type": "text",
        "id": "whatsapp_number",
        "label": "t:settings_schema.whatsapp-button.settings.whatsapp_number.label",
        "placeholder": "t:settings_schema.whatsapp-button.settings.whatsapp_number.placeholder"
      }
    ]
  },
  {
    "name": "t:settings_schema.installments.name",
    "settings": [
      {
        "type": "header",
        "content": "t:settings_schema.installments.settings.installments_header.content"
      },
      {
        "type": "checkbox",
        "id": "show_installments",
        "label": "t:settings_schema.installments.settings.show_installments.label",
        "default": true
      },
      {
        "type": "range",
        "id": "installments_count",
        "min": 1,
        "max": 12,
        "step": 1,
        "label": "t:settings_schema.installments.settings.installments_count.label",
        "default": 3
      },
      {
        "type": "number",
        "id": "installments_min_price",
        "label": "t:settings_schema.installments.settings.installments_min_price.label",
        "default": 50
      },
      {
        "type": "checkbox",
        "id": "show_interest_free",
        "label": "t:settings_schema.installments.settings.show_interest_free.label",
        "default": false
      }
    ]
  },
  {
    "name": "t:settings_schema.shipping.name",
