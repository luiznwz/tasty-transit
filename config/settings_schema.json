      {
        "type": "header",
        "content": "t:settings_schema.page_dimensions.settings.page_dimensions_header.content"
      },
      {
        "type": "range",
        "id": "page_width_desktop",
        "label": "t:settings_schema.page_dimensions.settings.page_width_desktop.label",
