<account-access>
  <div class="account-acess-login">
    {% form 'reset_customer_password' %}
      <div class="container-heading">
        <h2 class="title">{{ 'customer.reset_password.title' | t }}</h2>
        <p class="text-reset-password">{{ 'customer.reset_password.text' | t }}</p>
      </div>

      {% if form.errors %}
        <div class="form-error">
          {{ 'error.svg' | inline_asset_content }}
          {{ 'customer.errors.invalid_credentials' | t }}
        </div>
      {% endif %}

      <div class="container-fields">
        <div class="form-field form-field-password">
          <label for="password">{{ 'customer.reset_password.label-password' | t }}</label>
          <div class="container-input-password">
            <input
              class="input-item input-password"
              type="password"
              name="customer[password]"
              id="password"
              autocomplete="new-password"
              {% if form.errors contains 'password' %}
                aria-invalid="true"
                aria-describedby="password-error"
              {% endif %}
              placeholder="{{ 'customer.reset_password.label-password' | t }}"
            >
            {{ 'eye.svg' | inline_asset_content }}
          </div>
        </div>

        <div class="form-field form-field-password">
          <label for="password_confirmation">{{ 'customer.reset_password.label-confirm-password' | t }}</label>
          <div class="container-input-password">
            <input
              class="input-item input-password"
              type="password"
              name="customer[password_confirmation]"
              id="password_confirmation"
              autocomplete="new-password"
              {% if form.errors contains 'password_confirmation' %}
                aria-invalid="true"
                aria-describedby="password_confirmation-error"
              {% endif %}
              placeholder="{{ 'customer.reset_password.label-confirm-password' | t }}"
            >
            {{ 'eye.svg' | inline_asset_content }}
          </div>
        </div>
      </div>

      <div class="container-buttons">
        <div class="form-actions">
          <button class="btn-submit" type="submit">{{ 'customer.reset_password.btn-text' | t }}</button>
        </div>
      </div>
    {% endform %}
  </div>
</account-access>

{% schema %}
{
  "name": "t:sections.reset-password.name",
  "settings": [],
  "presets": [
    {
      "name": "t:sections.reset-password.name"
    }
  ]
}
{% endschema %}
