{% if settings.whatsapp_button %}
    <div class="container_button_whats">
        <a class="button_whats_link" href="https://api.whatsapp.com/send?phone={{ settings.whatsapp_number}}" target="_blank">

        <i class="fab fa-whatsapp" style="font-size:25px;color:white"></i>
        </a>
    </div>
{% endif %}

<style>
.container_button_whats {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 9999;
    background-color: var(--dark-blue);
    height: 50px;
    width: auto;
    border-radius: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
    padding: 0 14px;
    transition: .6s cubic-bezier(0.075, 0.82, 0.165, 1);
    cursor: pointer;
}
.container_button_whats:hover {
    opacity: 0.8;
}


@media screen and (max-width: 500px) {
    .container_button_whats {
        bottom: 20px;
        right: 20px;
    }
}
</style>