{% style %}
  @font-face {
    font-family: 'HeyWow';
    src: url('{{ "HeyWow.ttf" | asset_url }}') format('truetype');
    font-weight: 400;
    font-style: normal;
    font-display: swap
  }

  :root {
    /* Colors */
    --black: ##171717;
    --white: #FFFFFF;
    --off-white: #F3F1E8;
    --dark-blue: #181D23;
    --light-blue: #373F4A;
    --light-gray: #C1C0BC;
    --dark-gray: #686D74;
    --pink: #BF2696;

    /* Fonts */
    --font-rebond: 'HeyWow'
    , sans-serif;

    /* Spacing */
    --page-width: {{ settings.page_width_mobile }}vw;

    @media (min-width: 768px) {
      --page-width: {{ settings.page_width_desktop }}vw;
    }
  }
{% endstyle %}